# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/personal_assistant_army

DISABLE_SSL=false

# PostgreSQL Schema (optional - defaults to 'public')
# Useful for shared databases or Heroku with multiple apps
POSTGRES_SCHEMA=

# Google OAuth
# See GOOGLE_OAUTH.md for setup instructions
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback

# Security
# Generate with: openssl rand -hex 32
SESSION_SECRET=your_session_secret_here
ENCRYPTION_SECRET=your_encryption_secret_here

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:3000

# Production Example (Heroku):
# PORT=<automatically set by Heroku>
# NODE_ENV=production
# DATABASE_URL=<automatically set by Heroku Postgres>
# POSTGRES_SCHEMA=myapp
# GOOGLE_REDIRECT_URI=https://yourapp.herokuapp.com/api/auth/callback
# FRONTEND_URL=https://yourapp.herokuapp.com
